<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- Define a TreeWalker module which inspects the Java AST -->
    <module name="TreeWalker">

        <!-- Checks for missing Javadoc comments on classes and methods -->
        <module name="JavadocMethod"/>
        <module name="JavadocType"/>

        <!-- Check that indentation is 4 spaces -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
            <property name="caseIndent" value="4"/>
            <property name="tabWidth" value="4"/>
        </module>

        <!-- Checks naming conventions -->
        <module name="MethodName"/>
        <module name="ParameterName"/>
        <module name="LocalVariableName"/>

        <!-- Checks for unused imports -->
        <module name="UnusedImports"/>
        <module name="RegexpSinglelineJava">
            <property name="format" value="System\.out\.println"/>
            <property name="message" value="Avoid using System.out.println; use a logger instead."/>
            <property name="ignoreComments" value="true"/> </module>

        <module name="RegexpSinglelineJava">
            <property name="format" value="System\.(out|err)\.(print|println|printf)\s*\("/>
            <property name="message" value="Avoid using System.out/err print statements; use a logger instead."/>
            <property name="ignoreComments" value="true"/>
        </module>

        <module name="RegexpSinglelineJava">
            <property name="format" value="\.printStackTrace\s*\("/>
            <property name="message" value="Avoid using printStackTrace(); log the exception instead."/>
            <property name="ignoreComments" value="true"/>
        </module>

    </module>

</module>